<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Overtime App ALERT", sticky: false, time: 3000, image: :notice) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Overtime App ERROR", sticky: false, time: 3000, image: :notice) %>
<% else %>
	<%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, time: 3000, image: :notice) %>
<% end %>